@model WBookStore.Models.ModelViews.CategoryView

@{
    ViewBag.Title = "Edit Category";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit Category</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.Name, "Tên danh mục")
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Tên danh mục" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Active, "Trạng thái")
        @Html.DropDownListFor(m => m.Active,
            new SelectList(new[] {
                new { Value = "1", Text = "Active" },
                new { Value = "0", Text = "Inactive" }
            }, "Value", "Text", Model.Active), "Chọn trạng thái", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Active, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Ảnh danh mục hiện tại</label><br />
        <img src="@Url.Content(!string.IsNullOrEmpty(Model.Image)
            ? "~/Content/Images/" + Model.Image
            : "~/Content/Images/no-image.png")"
             alt="Current Image"
             style="max-height:100px; border:1px solid #ccc; padding:3px;" />

    </div>

    <div class="form-group">
        <label>Chọn ảnh mới (Không bắt buộc)</label>
        <input type="file" name="imageFile" class="form-control-file" accept="image/*" onchange="previewImage(event)" />
        <br />
        <img id="preview" src="#" alt="" style="display:none; max-height:100px; border:1px solid #ccc; padding:3px;" />
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
}

@section Scripts {
    <script>
        function previewImage(event) {
            const output = document.getElementById('preview');
            output.src = URL.createObjectURL(event.target.files[0]);
            output.style.display = 'block';
        }
    </script>
}
